generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AirPlane {
  id                       String @id @default(uuid())
  maximunNumberOfPassagers Int    @map("max_passagers")
  destiny                  String
  airPlaneModel            String @map("plane_model")

  seats PlaneSeat[]
}

model PlaneSeat {
  id Int @id @default(autoincrement())

  airplane   AirPlane @relation(fields: [airPlaneId], references: [id])
  airPlaneId String

  @@map("plane_seat")
}
